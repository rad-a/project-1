div(class="cell medium-3 large-2 noMarginTop sidePanels" id="infoArea" data-sticky-container)


        div(class="panel-radius" id="searchForm")
            div( class="translucent-form-overlay")
                form(data-abide novalidate id="petSearchForm" method="POST")
                    h5 Search for dogs
                    
                    label Breed
                    select(
                
                            id="pet-breed"
                            name="pet-breed"
                    )

                    label Gender
                    select(
                
                            id="pet-gender"
                            name="pet-gender"
                    )
                        option(value="Male") Male
                        option(value="Female") Female
                        option(value="Other") Other

                    label Age
                    select(
                
                            id="pet-age"
                            name="pet-age"
                    )
                        option(value="0" selected) Any
                        option(value="1") Puppy (<1 year)
                        option(value="2" ) Young (1-3 years)
                        option(value="3") Adult (3-7 years)
                        option(value="4") Senior (7+ years)

                    label Size
                    select(
                
                            id="pet-size"
                            name="pet-size"
                    )
                        //- option(value="Any" selected) Any
                        option(value="Small") Small (1-19 lbs)
                        option(value="Medium" ) Medium (20-59 lbs)
                        option(value="Large") Large (60-99 lbs)
                        option(value="Extra-large") Extra-large (100+ lbs)

                   
                    button(type="submit" class="primary button expanded search-button" id="petSearchSubmit")
                        | Search
                   
             





        div(class="panel-radius" id="planner")

            h5(class="smallHeader") Planned Play Dates 

            a(href="/planner")
                button(type="button" class="primary button expanded search-button" id="plannerLink")
                    | View Planner

